{
  "name": "sentinel-desktop",
  "version": "2.1.0",
  "description": "Red Team Adware Analyzer",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Rakasatryo",
    "email": "rak1ya909090@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.rakasatryo.sentinel",
    "productName": "Sentinel Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "index.html",
      "styles.css",
      "package.json"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "extraResources": [
        {
          "from": "dist/sentinel-engine",
          "to": "sentinel-engine"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        {
          "from": "dist/sentinel-engine",
          "to": "sentinel-engine"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extraResources": [
        {
          "from": "dist/sentinel-engine",
          "to": "sentinel-engine"
        }
      ]
    }
  }
}